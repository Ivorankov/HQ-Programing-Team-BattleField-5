<Window x:Class="BattleField_WPF.GameInitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameInitWindow" Height="300" Width="300">

    <Window.Resources>
        <Style x:Key="radioButton" TargetType="RadioButton">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0,5,0,5" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="Enter size of game field(2-10)" />
        <TextBox x:Name="ResponseTextBox" />
        <RadioButton x:Name="RadioButton" Checked="RadioButton_Checked"  Style="{StaticResource radioButton}" Content="Enable Explosion Chaining"/>
        <Button Content="OK" Click="Button_Click" />
    </StackPanel>
</Window>
